<h1>Edit <%= @discount.name %> </h1><hr>
<%= form_with url: "/merchants/#{@discount.merchant.id}/bulk_discounts/#{@discount.id}/edit", method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <p><%= f.text_field :name, value: @discount.name %></p>
  <%= f.label :discount_percentage %>
  <p><%= f.text_field :discount_percentage, value: @discount.discount_percentage %></p>
  <%= f.label :quantity_threshold %>
  <p><%= f.text_field :quantity_threshold, value: @discount.quantity_threshold %></p>
  <%= f.submit "Submit" %>
<% end %>
